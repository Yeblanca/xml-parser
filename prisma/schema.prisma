generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Make {
  id           String        @id @default(auto()) @map("_id") @db.ObjectId
  makeId       String
  makeName     String
  vehicleTypes VehicleType[]
}

model VehicleType {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  typeId   String
  typeName String
  makeId   String @db.ObjectId
  make     Make   @relation(fields: [makeId], references: [id])
}
